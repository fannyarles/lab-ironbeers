<div class="single-beer">
    <a href="beer-{{id}}"><img src="{{image_url}}" class="beer" /></a>
    <div class="beer-infos">
        <a href="beer-{{id}}"><h2>{{name}}</h2></a>
        <p class="tagline">{{tagline}}</p>
        <p>{{description}}</p>
        <p><strong>Food pairings:</strong></p>
        <ul>
            {{#each food_pairing}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
        <p><strong>Brewer's Tips:</strong> {{brewers_tips}}</p>
    </div>
</div>